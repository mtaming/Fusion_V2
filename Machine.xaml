<Page x:Class="Fusion_v2.Machine"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:Fusion_v2"
      mc:Ignorable="d" 
      Width="1096"
      Height="708" 
      Title="Machine"
      FontFamily="Century Gothic">

    <Page.Resources>
        <Style x:Key="_ListBoxItemStyle" TargetType="ListBoxItem">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Name="_Border"
                                Padding="5"
                                SnapsToDevicePixels="true">
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="true">
                                <Setter TargetName="_Border" Property="Background" Value="#FF57A6E6"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontSize" Value="18"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Trigger>

                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter TargetName="_Border" Property="Background" Value="LightGray"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid Name="MainGrid">
            <Grid Name="MachGrid">
                <StackPanel Orientation="Horizontal" Margin="5">
                    <materialDesign:PackIcon Kind="Server" Width="30" Height="30" Margin="5 8 0 0" Foreground="White"/>
                    <Label Name="lblSettings" Content="Machine Setup" FontSize="25" Margin="5 0 0 0" FontWeight="Bold" Foreground="White" VerticalAlignment="Top"/>
                </StackPanel>
                <Border BorderBrush="Transparent" BorderThickness="2" Margin="10 50 10 0" >
                    <Grid>
                        <Border Name="serBorder" CornerRadius="10" BorderThickness="3" BorderBrush="#FFFFF0B7">
                            <Grid>
                                <Border BorderBrush="Black" Margin="5" CornerRadius="10">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#FF205E8D" Offset="0.0" />
                                            <GradientStop Color="#FF003B67" Offset="0.8" />
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="265"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="284*"/>
                                            <RowDefinition Height="70"/>
                                        </Grid.RowDefinitions>
                                        <ListBox ItemContainerStyle="{DynamicResource _ListBoxItemStyle}" Grid.Column="0" Grid.RowSpan="2" x:Name="MachListBox" BorderThickness="2,2,2,2" Margin="10,10,9,10" Background="AliceBlue" d:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin" FontSize="13" FontFamily="Trebuchet" Padding="5"/>

                                        <TabControl Grid.Column="1" Margin="0 10 10 10" Style="{DynamicResource MahApps.Styles.TabControl.Animated}" mah:TabControlHelper.Transition="Right" TabStripPlacement="Top" d:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin">

                                            <TabItem  Background="#FFF9D342">
                                                <TabItem.Header>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Label Content="General" FontSize="12" FontWeight="Bold" />
                                                    </StackPanel>
                                                </TabItem.Header>
                                                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="34*"/>
                                                            <ColumnDefinition Width="121*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <Grid.Background>
                                                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                                <GradientStop Color="AliceBlue" Offset="0.0"/>
                                                                <GradientStop Color="#FF154672" Offset="1.0"/>

                                                            </LinearGradientBrush>
                                                        </Grid.Background>
                                                        <StackPanel Grid.ColumnSpan="2">
                                                            <DockPanel HorizontalAlignment="Left">
                                                                <Label Content="Machine License Level:*" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top" Foreground="Black" FontSize="15" FontWeight="Bold"/>
                                                                <RadioButton Content="Level 1" Margin="20 20" Foreground="Black" FontSize="15"/>
                                                                <RadioButton Content="Level 2" Margin="20 20" Foreground="Black" FontSize="15"/>
                                                                <RadioButton Content="Level 3" Margin="20 20" Foreground="Black" FontSize="15"/>
                                                            </DockPanel>

                                                            <DockPanel Margin="20 20 20 0">
                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="200"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                    </Grid.ColumnDefinitions>
                                                                    <Label Grid.Column="0" Content="Machine Name:*" Foreground="Black" FontSize="15" FontWeight="Bold" HorizontalAlignment="Left"/>
                                                                    <TextBox Grid.Column="1" Name="TxtBoxMachName" Height="30" Padding="5 5" BorderBrush="Black" FontSize="14" BorderThickness="1" TextWrapping="Wrap"  Background="AliceBlue" Margin="5 0 0 0"/>
                                                                </Grid>
                                                            </DockPanel>

                                                            <DockPanel Margin="20 20 20 0">
                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="200"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                    </Grid.ColumnDefinitions>
                                                                    <Label Grid.Column="0" Content="Control Program Group:" Foreground="Black" FontSize="15" FontWeight="Bold" HorizontalAlignment="Left"/>
                                                                    <TextBox Grid.Column="1" Name="TxtBoxCtrlPgrmGrp" Height="30" Padding="5 5" BorderBrush="Black" FontSize="14" BorderThickness="1" TextWrapping="Wrap" Background="AliceBlue" Margin="5 0 0 0"/>
                                                                </Grid>
                                                            </DockPanel>

                                                            <DockPanel Margin="20 20 20 0">
                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="200"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                    </Grid.ColumnDefinitions>
                                                                    <Label Grid.Column="0" Content="Facility ID:" Foreground="Black" FontSize="15" FontWeight="Bold" HorizontalAlignment="Left"/>
                                                                    <TextBox Grid.Column="1" Name="TxtBoxFacId" Height="30" Padding="5 5" BorderBrush="Black" FontSize="14" BorderThickness="1" TextWrapping="Wrap" Background="AliceBlue" Margin="5 0 0 0"/>
                                                                </Grid>
                                                            </DockPanel>

                                                            <DockPanel Margin="20 20 20 20">
                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="200"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                    </Grid.ColumnDefinitions>
                                                                    <Label Grid.Column="0" Content="Notes:" Foreground="Black" FontSize="15" FontWeight="Bold" HorizontalAlignment="Left"/>
                                                                    <RichTextBox Grid.Column="1" Name="TxtBoxNotes" Height="200" Padding="5 5" BorderBrush="Black" FontSize="14" BorderThickness="1"  Background="AliceBlue" Margin="5 0 0 0">
                                                                        <FlowDocument>
                                                                            <Paragraph>
                                                                                <Run Text=""/>
                                                                            </Paragraph>
                                                                        </FlowDocument>
                                                                    </RichTextBox>
                                                                </Grid>
                                                            </DockPanel>
                                                        </StackPanel>
                                                    </Grid>
                                                </ScrollViewer>
                                            </TabItem>
                                            <TabItem  Background="#FFF9D342" >
                                                <TabItem.Header>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Label Content="Communications" FontSize="12" FontWeight="Bold" />
                                                    </StackPanel>
                                                </TabItem.Header>
                                                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                                                    <Grid>
                                                        <Grid.Background>
                                                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                                <GradientStop Color="AliceBlue" Offset="0.0"/>
                                                                <GradientStop Color="#FF154672" Offset="1.0"/>

                                                            </LinearGradientBrush>
                                                        </Grid.Background>
                                                        <StackPanel Margin="20">
                                                            <DockPanel>
                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="*"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                    </Grid.ColumnDefinitions>
                                                                    <RadioButton Grid.Column="0" Name="rbComNone" Content="None" IsChecked="True" Foreground="Black" FontSize="15" FontWeight="Bold" Click="rbComNone_Click"/>
                                                                    <RadioButton Grid.Column="1" Name="rbComFlashDNC" Content="Flash DNC" Foreground="Black" FontSize="15" FontWeight="Bold" Margin="10 0 0 0" Checked="rbComFlashDNC_Checked"/>
                                                                    <RadioButton Grid.Column="2" Name="rbComFocas" Content="Focas" Foreground="Black" FontSize="15" FontWeight="Bold" Margin="10 0 0 0" Checked="rbComFocas_Checked"/>
                                                                    <RadioButton Grid.Column="3" Name="rbComSocket" Content="Socket" Foreground="Black" FontSize="15" FontWeight="Bold" Margin="10 0 0 0" Checked="rbComSocket_Checked"/>
                                                                    <RadioButton Grid.Column="4" Name="rbComFolderWatch" Content="Folder Watch" Foreground="Black" FontSize="15" FontWeight="Bold" Margin="10 0 0 0" Checked="rbComFolderWatch_Checked"/>
                                                                </Grid>
                                                            </DockPanel>


                                                            <Grid Name="FlashDNCGrid" Margin="10" Visibility="Collapsed">
                                                                <Border Background="#FF42425B" CornerRadius="15">
                                                                    <StackPanel Margin="20">
                                                                        <Label HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="#FFF5EFDC" Content="To change FlashDNC Settings, go to Setup &gt; Application &gt; Global &gt; FlashDNC Tab." d:LayoutOverrides="VerticalAlignment" FontSize="15"/>
                                                                        <DockPanel >
                                                                            <Grid>
                                                                                <Grid.ColumnDefinitions>
                                                                                    <ColumnDefinition Width="130"/>
                                                                                    <ColumnDefinition Width="*"/>
                                                                                </Grid.ColumnDefinitions>
                                                                                <Label Grid.Column="0" HorizontalAlignment="Left"  VerticalAlignment="Top" Foreground="#FFFFDF14" Content="Flash Drive Name:" FontSize="13"/>
                                                                                <Label Grid.Column="1" Foreground="#FF14FF34" Content="Flash Drive Name.............." FontSize="13"/>
                                                                            </Grid>
                                                                        </DockPanel>
                                                                        <DockPanel>
                                                                            <Grid>
                                                                                <Grid.ColumnDefinitions>
                                                                                    <ColumnDefinition Width="130"/>
                                                                                    <ColumnDefinition Width="*"/>
                                                                                </Grid.ColumnDefinitions>
                                                                                <Label Grid.Column="0" HorizontalAlignment="Left"  VerticalAlignment="Top" Foreground="#FFFFDF14" Content="File Types:" FontSize="13"/>
                                                                                <Label Grid.Column="1" Foreground="#FF14FF34" Content=".TXT .NC" FontSize="13"/>
                                                                            </Grid>
                                                                        </DockPanel>
                                                                        <CheckBox HorizontalAlignment="Left" Margin="0 10 0 0">
                                                                            <Label Foreground="#FFF7F3F3" FontFamily="DokChampa" FontSize="13">
                                                                                Send INI with Programs
                                                                            </Label>
                                                                        </CheckBox>
                                                                    </StackPanel>
                                                                </Border>
                                                            </Grid>

                                                            <Grid Name="FocasGrid" Margin="10" Visibility="Collapsed">
                                                                <Border Background="#FF42425B" CornerRadius="15">
                                                                    <StackPanel Margin="20">
                                                                        <DockPanel>
                                                                            <Grid>
                                                                                <Grid.ColumnDefinitions>
                                                                                    <ColumnDefinition Width="150"/>
                                                                                    <ColumnDefinition Width="*"/>
                                                                                    <ColumnDefinition Width="60"/>
                                                                                    <ColumnDefinition Width="130"/>
                                                                                    <ColumnDefinition Width="110"/>
                                                                                    <ColumnDefinition Width="87"/>
                                                                                </Grid.ColumnDefinitions>
                                                                                <Label Grid.Column="0" HorizontalAlignment="Left" Foreground="White" Content="Fanuc Static Address:" FontSize="13" FontWeight="Bold"/>
                                                                                <TextBox Grid.Column="1" x:Name="Fhostname" FontSize="12" Background="White" Padding="5" Height="30" TextWrapping="Wrap"></TextBox>
                                                                                <Label Grid.Column="2" HorizontalAlignment="Left" Foreground="White" Content="Port:" FontSize="13" FontWeight="Bold" Margin="20 0 0 0"/>
                                                                                <TextBox Grid.Column="3" x:Name="fport" FontSize="12" Background="White" Padding="5" Height="30"></TextBox>
                                                                                <Label Grid.Column="4" HorizontalAlignment="Left" Foreground="White" Content="Send Delay:" FontSize="13" FontWeight="Bold" Margin="20 0 0 0"/>
                                                                                <TextBox Grid.Column="5" x:Name="fSendDelay" FontSize="12" Background="White" Padding="5" Height="30" ></TextBox>
                                                                                <TextBlock Grid.Column="5" IsHitTestVisible="False" Text="ms" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0 0 25 0" Foreground="DarkGray" FontStyle="Italic">
                                                                                    <TextBlock.Style>
                                                                                        <Style TargetType="{x:Type TextBlock}">
                                                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                                                            <Style.Triggers>
                                                                                                <DataTrigger Binding="{Binding Text, ElementName=fSendDelay}" Value="">
                                                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                                                </DataTrigger>
                                                                                            </Style.Triggers>
                                                                                        </Style>
                                                                                    </TextBlock.Style>
                                                                                </TextBlock>
                                                                                <Button Grid.Column="5" x:Name="btnClearText" Background="Transparent" BorderBrush="Transparent" Foreground="Red"  Height="30" Width="29" HorizontalAlignment="Right" FontWeight="ExtraBlack" ToolTip="Clear Text">
                                                                                    <Grid Margin="-8,-5">
                                                                                        <materialDesign:PackIcon Kind="Close" Width="17" Height="17"/>
                                                                                    </Grid>
                                                                                </Button>
                                                                            </Grid>
                                                                        </DockPanel>
                                                                        <CheckBox x:Name="FOptHostname" Height="24" VerticalAlignment="Top" Margin="150,5,0,0"   Background="#FFF9F6F6" Foreground="White" HorizontalAlignment="Left" Width="123" d:LayoutOverrides="VerticalAlignment">
                                                                            <Label Foreground="White" FontSize="12">
                                                                                Use HostName
                                                                            </Label>
                                                                        </CheckBox>

                                                                        <DockPanel Margin="0 10 0 0">
                                                                            <Grid>
                                                                                <Grid.ColumnDefinitions>
                                                                                    <ColumnDefinition Width="190"/>
                                                                                    <ColumnDefinition Width="*"/>
                                                                                    <ColumnDefinition Width="75"/>
                                                                                </Grid.ColumnDefinitions>
                                                                                <Label Grid.Column="0" Foreground="White" Content="CNC Directory:" FontSize="13" FontWeight="Bold" Margin="0,0,88,0" VerticalAlignment="Center"/>
                                                                                <Label Grid.Column="0" HorizontalAlignment="Right" Foreground="#FF17FD00" Content="//CNC_MEM/" FontSize="13" FontWeight="Bold" Margin="0,0,4,0" Width="86" VerticalAlignment="Center"/>

                                                                                <TextBox Grid.Column="1" Background="White" FontSize="12" Margin="0,6" Height="30"/>
                                                                                <Button Grid.Column="2" Height="Auto" Background="{x:Null}" Foreground="White" BorderBrush="{x:Null}" HorizontalAlignment="Right" Margin="5 0 5 0">
                                                                                    <materialDesign:PackIcon Kind="Folder" Width="30" Height="30" Foreground="#FFE6B920"/>
                                                                                </Button>
                                                                            </Grid>
                                                                        </DockPanel>
                                                                        <CheckBox x:Name="FOptHostname_Copy" Height="36" Margin="190 -10 0 0">
                                                                            <Label Foreground="White" FontSize="12" Content="Overwrite Existing File"/>
                                                                        </CheckBox>

                                                                        <CheckBox x:Name="FEnabledFldrWatch" >
                                                                            <Label Foreground="White" FontSize="16" Content="Enabled Folder Watch"/>
                                                                        </CheckBox>
                                                                        <DockPanel>
                                                                            <Grid>
                                                                                <Grid.ColumnDefinitions>
                                                                                    <ColumnDefinition Width="*"/>
                                                                                    <ColumnDefinition Width="75"/>
                                                                                </Grid.ColumnDefinitions>
                                                                                <TextBox Grid.Column="0" x:Name="FfldrWatch" Height="37" VerticalAlignment="Top" FontSize="14" Background="White" Padding="5"/>
                                                                                <Button Grid.Column="1" Height="Auto" Background="{x:Null}" Foreground="White" BorderBrush="{x:Null}" HorizontalAlignment="Right" Margin="5 0 5 0">
                                                                                    <materialDesign:PackIcon Kind="Folder" Width="30" Height="30" Foreground="#FFE6B920"/>
                                                                                </Button>
                                                                            </Grid>
                                                                        </DockPanel>

                                                                        <Expander Margin="0 20 0 0" Background="#FFA9CFF0" BorderBrush="Khaki" BorderThickness="2">
                                                                            <Expander.Header>
                                                                                <CheckBox x:Name="FocasComOutNportCHbox" Foreground="#FFF0E0E0">
                                                                                    <Label Foreground="Black">Communication Out - Nport Barcode Request</Label>
                                                                                </CheckBox>
                                                                            </Expander.Header>
                                                                            <StackPanel Margin="15">
                                                                                <DockPanel>
                                                                                    <Grid>
                                                                                        <Grid.ColumnDefinitions>
                                                                                            <ColumnDefinition Width="410"/>
                                                                                            <ColumnDefinition Width="*"/>
                                                                                        </Grid.ColumnDefinitions>
                                                                                        <DockPanel Grid.Column="0">
                                                                                            <Label Foreground="Black" Content="Nport Address:" FontWeight="Bold"/>
                                                                                            <TextBox  TextWrapping="Wrap" Text="255" TextAlignment="Center" Height="30" VerticalAlignment="Top" Width="70" Background="White" Margin="10 0 0 0"/>
                                                                                            <TextBox  TextWrapping="Wrap" Text="255" TextAlignment="Center" Height="30" VerticalAlignment="Top" Width="70" Background="White" Margin="10 0 0 0"/>
                                                                                            <TextBox  TextWrapping="Wrap" Text="255" TextAlignment="Center" Height="30" VerticalAlignment="Top" Width="70" Background="White" Margin="10 0 0 0"/>
                                                                                            <TextBox  TextWrapping="Wrap" Text="255" TextAlignment="Center" Height="30" VerticalAlignment="Top" Width="70" Background="White" Margin="10 0 0 0"/>
                                                                                        </DockPanel>

                                                                                        <DockPanel Grid.Column="1" Margin="15 0 0 0">
                                                                                            <Grid>
                                                                                                <Grid.ColumnDefinitions>
                                                                                                    <ColumnDefinition Width="40"/>
                                                                                                    <ColumnDefinition Width="*"/>
                                                                                                </Grid.ColumnDefinitions>
                                                                                                <Label Grid.Column="0" Foreground="Black" Content="Port:" FontWeight="Bold"/>
                                                                                                <TextBox Grid.Column="1" TextWrapping="Wrap" TextAlignment="Center" Height="30" VerticalAlignment="Top" Background="White"/>
                                                                                            </Grid>
                                                                                        </DockPanel>

                                                                                    </Grid>
                                                                                </DockPanel>

                                                                            </StackPanel>
                                                                        </Expander>
                                                                    </StackPanel>
                                                                </Border>
                                                            </Grid>

                                                            <Grid Name="SocketGrid" Margin="10" Visibility="Collapsed">
                                                                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                                                                    <Border Background="#FF42425B" CornerRadius="15">
                                                                        <StackPanel Margin="20">
                                                                            <Label HorizontalAlignment="Left" Foreground="White" Content="Socket Address Options:" FontSize="15" FontWeight="Bold"/>
                                                                            <DockPanel>
                                                                                <Grid>
                                                                                    <Grid.ColumnDefinitions>
                                                                                        <ColumnDefinition Width="150"/>
                                                                                        <ColumnDefinition Width="*"/>
                                                                                        <ColumnDefinition Width="150"/>
                                                                                    </Grid.ColumnDefinitions>
                                                                                    <StackPanel Grid.Column="0">
                                                                                        <RadioButton x:Name="sockStaticOpt" Content="Static IP" Foreground="White" FontSize="13" VerticalAlignment="Center"/>
                                                                                        <RadioButton x:Name="sockDynamicOpt" Content="Dynamic" Foreground="White" FontSize="13" VerticalAlignment="Center" Margin="0 5 0 0"/>
                                                                                        <RadioButton x:Name="sockNportOpt" Content="Nport" Foreground="White" FontSize="13" VerticalAlignment="Center" Margin="0 5 0 0"/>
                                                                                    </StackPanel>
                                                                                    <StackPanel Grid.Column="1">
                                                                                        <DockPanel>
                                                                                            <Grid>
                                                                                                <Grid.ColumnDefinitions>
                                                                                                    <ColumnDefinition Width="165"/>
                                                                                                    <ColumnDefinition Width="*" MinWidth="100"/>
                                                                                                </Grid.ColumnDefinitions>
                                                                                                <CheckBox>
                                                                                                    <Label Foreground="White" FontSize="15">
                                                                                                        DNC
                                                                                                    </Label>
                                                                                                </CheckBox>
                                                                                                <TextBox Grid.Column="1" x:Name="nportPorts" Background="White" Height="30"/>
                                                                                                <TextBlock Grid.Column="1" IsHitTestVisible="False" Text="Port" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0 0 25 0" Foreground="DarkGray" FontStyle="Italic">
                                                                                                    <TextBlock.Style>
                                                                                                        <Style TargetType="{x:Type TextBlock}">
                                                                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                                                                            <Style.Triggers>
                                                                                                                <DataTrigger Binding="{Binding Text, ElementName=nportPorts}" Value="">
                                                                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                                                                </DataTrigger>
                                                                                                            </Style.Triggers>
                                                                                                        </Style>
                                                                                                    </TextBlock.Style>
                                                                                                </TextBlock>
                                                                                                <Button Grid.Column="1" x:Name="btnClearTextDNC" Background="Transparent" BorderBrush="Transparent" Foreground="Red"  Height="30" Width="29" HorizontalAlignment="Right" FontWeight="ExtraBlack" ToolTip="Clear Text">
                                                                                                    <Grid Margin="-8,-5">
                                                                                                        <materialDesign:PackIcon Kind="Close" Width="17" Height="17"/>
                                                                                                    </Grid>
                                                                                                </Button>
                                                                                            </Grid>
                                                                                        </DockPanel>
                                                                                        <DockPanel Margin="0 5 0 0">
                                                                                            <Grid>
                                                                                                <Grid.ColumnDefinitions>
                                                                                                    <ColumnDefinition Width="165"/>
                                                                                                    <ColumnDefinition Width="*" MinWidth="100"/>
                                                                                                </Grid.ColumnDefinitions>
                                                                                                <CheckBox>
                                                                                                    <Label Foreground="White" FontSize="15">
                                                                                                        Barcode Request
                                                                                                    </Label>
                                                                                                </CheckBox>
                                                                                                <TextBox Grid.Column="1" x:Name="nportPortBarcode" Background="White" Height="30"/>
                                                                                                <TextBlock Grid.Column="1" IsHitTestVisible="False" Text="Port" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0 0 25 0" Foreground="DarkGray" FontStyle="Italic">
                                                                                                    <TextBlock.Style>
                                                                                                        <Style TargetType="{x:Type TextBlock}">
                                                                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                                                                            <Style.Triggers>
                                                                                                                <DataTrigger Binding="{Binding Text, ElementName=nportPortBarcode}" Value="">
                                                                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                                                                </DataTrigger>
                                                                                                            </Style.Triggers>
                                                                                                        </Style>
                                                                                                    </TextBlock.Style>
                                                                                                </TextBlock>
                                                                                                <Button Grid.Column="1" x:Name="btnClearTextBarCode" Background="Transparent" BorderBrush="Transparent" Foreground="Red"  Height="30" Width="29" HorizontalAlignment="Right" FontWeight="ExtraBlack" ToolTip="Clear Text">
                                                                                                    <Grid Margin="-8,-5">
                                                                                                        <materialDesign:PackIcon Kind="Close" Width="17" Height="17"/>
                                                                                                    </Grid>
                                                                                                </Button>
                                                                                            </Grid>
                                                                                        </DockPanel>
                                                                                    </StackPanel>
                                                                                    <StackPanel Grid.Column="2" Margin="10 0 0 0">
                                                                                        <Label Height="26" VerticalAlignment="Top" Foreground="White" Content="Transmit Delay:" FontSize="14"/>
                                                                                        <DockPanel Margin="10 0 0 0">
                                                                                            <TextBox x:Name="nportDNCTDelay" Height="30" Width="70" Background="White" HorizontalAlignment="Left"/>
                                                                                            <Label FontSize="14" Content="ms" Foreground="White" FontStyle="Italic"/>
                                                                                        </DockPanel>
                                                                                    </StackPanel>
                                                                                </Grid>
                                                                            </DockPanel>

                                                                            <StackPanel Margin="0 10 0 0">
                                                                                <Expander Background="#FFA9CFF0" BorderBrush="Khaki" BorderThickness="2" >
                                                                                    <Expander.Header>
                                                                                        <CheckBox >
                                                                                            <Label Foreground="Black" FontWeight="bold">Communication Out - Folder Watch</Label>
                                                                                        </CheckBox>
                                                                                    </Expander.Header>
                                                                                    <StackPanel>
                                                                                        <DockPanel>
                                                                                            <TextBlock Text="Event Trigger via:" VerticalAlignment="Top" Foreground="Black" FontWeight="Bold" FontSize="15" Margin="10 10 0 0"/>
                                                                                            <RadioButton HorizontalAlignment="Left" Margin="10 5 0 0">
                                                                                                <Label Foreground="Black" FontSize="13">
                                                                                                    Windows Event Based
                                                                                                </Label>
                                                                                            </RadioButton>

                                                                                            <RadioButton HorizontalAlignment="Left" Margin="10 5 0 0">
                                                                                                <Label Foreground="Black" FontSize="13">
                                                                                                    Timer Event Based
                                                                                                </Label>
                                                                                            </RadioButton>

                                                                                        </DockPanel>

                                                                                        <DockPanel Margin="10 10 10 0">
                                                                                            <Grid>
                                                                                                <Grid.ColumnDefinitions>
                                                                                                    <ColumnDefinition Width="*" MinWidth="150"/>
                                                                                                    <ColumnDefinition Width="75"/>
                                                                                                </Grid.ColumnDefinitions>
                                                                                                <TextBox Grid.Column="0" x:Name="SocketfldrWatchOut"  Height="35" VerticalAlignment="Top" FontSize="12" Background="White"/>
                                                                                                <TextBlock Grid.Column="0" IsHitTestVisible="False" Text="Watch Folder" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0 0 25 0" Foreground="DarkGray" FontStyle="Italic">
