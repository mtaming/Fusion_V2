<Page xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"  x:Class="Fusion_v2.SetupApplication"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:Fusion_v2"
      mc:Ignorable="d" 
      Width="1500"
      Height="800" 
      Title="SetupApplication">

    <Page.Background>

        <VisualBrush>
            <VisualBrush.Visual>
                <Image Source="/Images/bg6.jpg" />

            </VisualBrush.Visual>
        </VisualBrush>

    </Page.Background>

    <Grid>
        <Grid Name="MainAppSetGrid">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Grid Name="AppSetGrid">
                <StackPanel Orientation="Horizontal" Margin="5">
                    <materialDesign:PackIcon Kind="Settings" Width="30" Height="30" Margin="5 8 0 0" Foreground="White"/>
                        <Label Name="lblSettings" Content="Application Settings" FontSize="25" Margin="5 0 0 0" FontWeight="Bold" Foreground="White"/>
                </StackPanel>
                <Border BorderBrush="Transparent" BorderThickness="2" Margin="10">
                    <Grid>
                        <StackPanel>
                            <Border Name="tabBorder" Margin="5 45 5 10" CornerRadius="10" BorderThickness="3" BorderBrush="#FFF9D342">
                                <TabControl  Margin="10 10"  Style="{DynamicResource MahApps.Styles.TabControl.Animated}" mah:TabControlHelper.Transition="Right" TabStripPlacement="Top" Background="#FF292826" >
                                    <TabItem Name="TI_Database" Background="#FFF9D342">
                                        <TabItem.Header>
                                            <StackPanel Orientation="Horizontal">
                                                    <materialDesign:PackIcon Kind="Database" Width="20" Height="20" Margin="0 0 0 0" Foreground="White"/>
                                                    <Label Content="Database" FontSize="15" FontWeight="Bold" Margin="0 -5 0 0" Foreground="White"/>
                                            </StackPanel>
                                        </TabItem.Header>
                                        <StackPanel>
                                            <Border  BorderBrush="Black" Margin="5">
                                                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                                                    <StackPanel>
                                                        <StackPanel Margin="20,10,20,0">
                                                                <Label Content="Active Database" FontSize="18" FontWeight="DemiBold" Foreground="White"/>

                                                                <RadioButton Name="activeDbRb" Content="MS SQL DATABASE" Margin="23,5,0,0" FontSize="14" Foreground="White"/>
                                                        </StackPanel>
                                                        <StackPanel Margin="20,15,20,0">
                                                                <Label Content="SQL Database Connection Settings" FontSize="18" FontWeight="DemiBold" Foreground="White"/>

                                                            <DockPanel Margin="0,10,0,0">
                                                                    <Label Content="Server Instance" Margin="20,0,10,0" FontSize="15" Foreground="White"/>
