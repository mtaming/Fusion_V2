                                                                                    <Label Content="Fusion IDs Options" FontSize="16" FontWeight="DemiBold" Foreground="White"/>
                                                                                <DockPanel Margin="10,10,10,10">
                                                                                    <Grid>
                                                                                        <Grid.ColumnDefinitions>
                                                                                            <ColumnDefinition Width="170"/>
                                                                                            <ColumnDefinition Width="*"/>
                                                                                            <ColumnDefinition Width="165"/>
                                                                                            <ColumnDefinition Width="*"/>
                                                                                        </Grid.ColumnDefinitions>
                                                                                            <Label Grid.Column="0" Content="Reference ID Label" FontSize="15" Foreground="White"/>
                                                                                        <TextBox Grid.Column="1" Name="gbPrefRIDTb" Height="30" BorderThickness="1" FontSize="15" Background="AliceBlue" Padding="5,5" FontWeight="Bold" Margin="0 0 0 0"/>
                                                                                            <Label Grid.Column="2" Content="Remote Request ID " FontSize="15" Margin="15,0,0,0" Foreground="White"/>
                                                                                        <TextBox Grid.Column="3" Name="gbPrefRRIDTb"  Height="30" BorderThickness="1" FontSize="15" Background="AliceBlue" Padding="5,5" FontWeight="Bold" Margin="10 0 0 0"/>
                                                                                    </Grid>
                                                                                </DockPanel>
                                                                                <DockPanel HorizontalAlignment="Center">
                                                                                        <CheckBox Margin="0,5,0,0" Content="Create Unique Remote Request ID. DNCIDs cannot be repeated with different Machine Groups." FontSize="14" Foreground="White"/>
                                                                                </DockPanel>
                                                                                    <Label Content="Incoming File Settings" FontSize="16" Margin="0,15,0,0" FontWeight="DemiBold" Foreground="White"/>
                                                                                <DockPanel Margin="10 5 10 0">
                                                                                    <Grid>
                                                                                        <Grid.ColumnDefinitions>
                                                                                            <ColumnDefinition Width="170"/>
                                                                                            <ColumnDefinition Width="*"/>
                                                                                            <ColumnDefinition Width="180"/>
                                                                                            <ColumnDefinition Width="*"/>
                                                                                        </Grid.ColumnDefinitions>
                                                                                            <TextBlock Grid.Column="0" Text="Remote Request Prefix &#10; for Barcode Print" FontSize="15"  Foreground="White"/>
                                                                                        <TextBox Grid.Column="1" Name="RemPrefixApp" Height="30" BorderThickness="1" Background="AliceBlue" FontSize="15" Padding="5" Margin="0 0 0 0"/>
                                                                                            <TextBlock Grid.Column="2" Text="Archive Folder Name" FontSize="15" Margin="15 10 0 0" Foreground="White"/>
                                                                                        <TextBox Grid.Column="3" Name="archiveFNameApp" Height="30" BorderThickness="1" Background="AliceBlue" FontSize="15"  Padding="5" Margin="5 0 0 0"/>
                                                                                    </Grid>
                                                                                </DockPanel>
                                                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10 0 0">
                                                                                        <CheckBox Name="enableRevision" FontSize="14" Content="Enable Revision Hold Settings to All Machines." Foreground="White"/>
                                                                                        <CheckBox Name="archiveIfm" FontSize="14" Content="Archive Incoming Files." Margin="10 0 0 0" Foreground="White"/>
                                                                                </StackPanel>
                                                                                <DockPanel Margin="0 20 0 0">
                                                                                    <Grid>
                                                                                        <Grid.ColumnDefinitions>
                                                                                            <ColumnDefinition Width="*"/>
                                                                                            <ColumnDefinition Width="*"/>
                                                                                            <ColumnDefinition Width="*"/>
                                                                                        </Grid.ColumnDefinitions>
                                                                                        <StackPanel Grid.Column="0">
                                                                                                <Label Content="Folder Reserved" FontSize="15" FontWeight="DemiBold" Foreground="White"/>
                                                                                                <CheckBox Name="useFolderResCb" FontSize="15" Content="Use Folder Reserved" Margin="10 0 0 0" Foreground="White"/>
                                                                                        </StackPanel>
                                                                                        <StackPanel Grid.Column="1">
                                                                                                <Label Content="Mapped Network Drive" FontSize="15" FontWeight="DemiBold" Foreground="White"/>
                                                                                                <CheckBox Name="mapNetDriveCbs" FontSize="15" Content="Resolve Path to UNC Address" Margin="10 0 0 0" Foreground="White"/>
                                                                                        </StackPanel>
                                                                                        <StackPanel Grid.Column="2">
                                                                                                <Label Content="Machine Nport" FontSize="16" FontWeight="DemiBold" Foreground="White"/>
                                                                                            <StackPanel>
                                                                                                <Grid>

                                                                                                    <Grid.ColumnDefinitions>
                                                                                                        <ColumnDefinition Width="145"/>
                                                                                                        <ColumnDefinition Width="*"/>
                                                                                                    </Grid.ColumnDefinitions>
                                                                                                        <Label Grid.Column="0" FontSize="15" Content="Timer Delay (sec)" Margin="10 0 0 0" Foreground="White"/>
                                                                                                    <TextBox Grid.Column="1"  Name="timeDelayTxtBox" Height="30" BorderThickness="1" Background="AliceBlue" FontSize="15" Padding="5" Margin="0 0 10 0"/>
                                                                                                </Grid>
                                                                                            </StackPanel>
                                                                                        </StackPanel>
                                                                                    </Grid>
                                                                                </DockPanel>
                                                                                <DockPanel HorizontalAlignment="Right" Margin="0,10,5,0">
                                                                                    <Button Name="restoreDefPref" Margin="0 20 0 0">
                                                                                        <DockPanel>
                                                                                            <materialDesign:PackIcon Kind="Restore" Width="20" Height="20" Margin="0,0,10,0"/>
                                                                                            <TextBlock Text="Restore Default" VerticalAlignment="Center" />
                                                                                        </DockPanel>
                                                                                    </Button>
                                                                                    <Button Name="savePrefApp" Margin="5 20 0 0">
                                                                                        <DockPanel>
                                                                                            <materialDesign:PackIcon Kind="ContentSaveAll" Width="20" Height="20" Margin="0,0,10,0"/>
                                                                                            <TextBlock Text="Save All" VerticalAlignment="Center" FontWeight="Bold"/>
                                                                                        </DockPanel>
                                                                                    </Button>
                                                                                </DockPanel>
                                                                            </StackPanel>
                                                                        </StackPanel>
                                                                    </StackPanel>
                                                                </TabItem>

                                                                <TabItem Background="#FFF9D342">
                                                                    <TabItem.Header>
                                                                        <StackPanel Orientation="Horizontal">
                                                                            <materialDesign:PackIcon Kind="UsbFlashDrive" Width="15" Height="15" Margin="0 5 0 0" Foreground="White"/>
                                                                                <Label Content="Flash DNC" FontSize="12" FontWeight="Bold" Foreground="White"/>
                                                                        </StackPanel>
                                                                    </TabItem.Header>
                                                                    <StackPanel Margin="10 10">
                                                                        <StackPanel>
                                                                                <Label Content="Flash DNC Settings" FontSize="18" FontWeight="Bold" Foreground="White"/>
                                                                            <StackPanel Margin="20,0,20,0">
                                                                                    <Label Content="Set Flash Drive Name" FontSize="16" FontWeight="DemiBold" Foreground="White"/>
                                                                                <DockPanel Margin="0,0,10,0">
                                                                                    <Grid>
                                                                                        <Grid.ColumnDefinitions>
                                                                                            <ColumnDefinition Width="*"/>
                                                                                            <ColumnDefinition Width="70"/>
                                                                                        </Grid.ColumnDefinitions>
                                                                                        <TextBox Grid.Column="0" Name="flashDNCName"  Height="30" BorderThickness="1" Background="AliceBlue" FontSize="15" Padding="5,5" Margin="5"/>
                                                                                        <Button Grid.Column="1" BorderThickness="1.5" BorderBrush="Black" FontSize="15">
                                                                                            <Grid Margin="0,0,-15,0">
                                                                                                <materialDesign:PackIcon Kind="Usb" Width="20" Height="15" HorizontalAlignment="Center" Margin="-10,0,6,0"  />
                                                                                            </Grid>
                                                                                        </Button>
                                                                                    </Grid>
                                                                                </DockPanel>
                                                                                    <Label Content="File Types to Include" FontSize="16" FontWeight="DemiBold" Margin="0 10 0 5" Foreground="White"/>
                                                                                <DockPanel Margin="0 0 10 0">
                                                                                    <Grid>
                                                                                        <Grid.ColumnDefinitions>
                                                                                            <ColumnDefinition Width="*"/>
                                                                                            <ColumnDefinition Width="300"/>
                                                                                        </Grid.ColumnDefinitions>
                                                                                        <ListBox Grid.Column="0" Name="fileTypesList" AlternationCount="2" BorderThickness="1"  Background="AliceBlue" Height="150" FontSize="13" BorderBrush="Black">

                                                                                        </ListBox>
                                                                                        <Button Name="remFileTypeBtn" Background="Firebrick"  BorderThickness="1.5" BorderBrush="Black" Margin="0 0 5 5" VerticalAlignment="Bottom" HorizontalAlignment="Right">
                                                                                            <DockPanel Margin="0,-1,-5,0">
                                                                                                <materialDesign:PackIcon Kind="RemoveCircleOutline" Width="20" Height="15" HorizontalAlignment="Center" Margin="-10,2,6,0"  />
                                                                                                <TextBlock Text="Remove" Margin="0,2,0,0" />
                                                                                            </DockPanel>
                                                                                        </Button>
                                                                                        <StackPanel Grid.Column="1">
                                                                                            <TextBox Name="addFileType" ToolTip="Enter a file type you want to include." BorderThickness="1" Background="AliceBlue" FontSize="14" Height="35" Padding="5 5" Margin="15,0,0,5" HorizontalContentAlignment="Center" Visibility="Visible"/>
                                                                                            <DockPanel >
                                                                                                <Grid Margin="10 0 0 10">
                                                                                                    <Grid.ColumnDefinitions>
                                                                                                        <ColumnDefinition Width="*"/>

                                                                                                    </Grid.ColumnDefinitions>
                                                                                                    <Button Name="addFileTypeBtn"  VerticalAlignment="Top" Margin="5 0 0 0">
                                                                                                        <DockPanel Margin="0,-1,-5,0">
                                                                                                            <materialDesign:PackIcon Kind="Add" Width="20" Height="15" HorizontalAlignment="Center" Margin="-10,2,6,0"  />
                                                                                                            <TextBlock Text="Add" Margin="0,2,0,0" />
                                                                                                        </DockPanel>
                                                                                                    </Button>

                                                                                                </Grid>
                                                                                            </DockPanel>

                                                                                        </StackPanel>
                                                                                    </Grid>
                                                                                </DockPanel>
                                                                                <DockPanel Margin="0,30,10,10" HorizontalAlignment="Right">
                                                                                    <Button  Name="restoreDefDNC" Margin="0 0 0 0">
                                                                                        <DockPanel>
                                                                                            <materialDesign:PackIcon Kind="Restore" Width="20" Height="20" Margin="0,0,10,0"/>
                                                                                            <TextBlock Text="Restore Default" VerticalAlignment="Center" />
                                                                                        </DockPanel>
                                                                                    </Button>
                                                                                    <Button Name="saveDncApp" Margin="5 0 0 0">
                                                                                        <DockPanel>
                                                                                            <materialDesign:PackIcon Kind="ContentSaveAll" Width="20" Height="20" Margin="0,0,10,0"/>
                                                                                            <TextBlock Text="Save All" VerticalAlignment="Center" FontWeight="Bold"/>
                                                                                        </DockPanel>
                                                                                    </Button>
                                                                                </DockPanel>
                                                                            </StackPanel>
                                                                        </StackPanel>
                                                                    </StackPanel>
                                                                </TabItem>
                                                            </TabControl>
                                                        </Border>
                                                    </StackPanel>
                                                </ScrollViewer>
                                            </Border>
                                        </StackPanel>
                                    </TabItem>

                                        <TabItem Background="#FFF9D342">
                                            <TabItem.Header>
                                                <StackPanel Orientation="Horizontal">
                                                    <materialDesign:PackIcon Kind="Person" Width="20" Height="20" Margin="0 0 0 0" Foreground="White"/>
                                                    <Label Content="Personal" FontSize="15" FontWeight="Bold" Margin="0 -5 0 0" Foreground="White"/>
                                                </StackPanel>
                                            </TabItem.Header>
                                            <StackPanel>
                                                <Border BorderBrush="Black" Margin="5">
                                                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                                                        <StackPanel>
                                                            <StackPanel Orientation="Horizontal">
                                                                <materialDesign:PackIcon Kind="Person" Width="30" Height="30" Margin="15 15 5 0" Foreground="White"/>
