                                                                        <ComboBoxItem Content="Server" IsSelected="True"/>
                                                                        <ComboBoxItem Content="Server" />
                                                                        <ComboBoxItem Content="Server" />
                                                                        <ComboBoxItem Content="Server" />
                                                                    </ComboBox>
                                                            </DockPanel>

                                                            <DockPanel Margin="0,5,0,0">
                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="*"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                    </Grid.ColumnDefinitions>
                                                                    <StackPanel Grid.Column="0">
                                                                        <DockPanel >
                                                                                <Label Content="Database Name" Margin="20,5,6,0" FontSize="15" Foreground="White"/>
                                                                            <TextBox Name="dbNameApp" Margin="0,5,10,0" Height="30" BorderThickness="1" Background="AliceBlue" FontSize="14" Padding="5"/>
                                                                        </DockPanel>
                                                                        <DockPanel Margin="0 5 0 0">
                                                                                <Label Content="Username" Margin="20,5,44,0" FontSize="15" Foreground="White"/>
                                                                            <TextBox Name="dbUsrApp" Margin="11,5,10,0" Height="30" BorderThickness="1" Background="AliceBlue" FontSize="14" Padding="5"/>
                                                                        </DockPanel>
                                                                    </StackPanel>
                                                                    <StackPanel Grid.Column="1" Margin="0 0 0 0">
                                                                        <DockPanel>
                                                                                <Label Content="Timeout" Margin="10,5,21,0" FontSize="15" Foreground="White"/>
                                                                            <TextBox Name="dbTmeApp" Margin="3,5,30,0" Height="30" BorderThickness="1" Background="AliceBlue" FontSize="14" Padding="5"/>
                                                                        </DockPanel>
                                                                        <DockPanel Margin="0 5 0 0">
                                                                                <Label Content="Password" Margin="10,5,14,0" FontSize="15" Foreground="White"/>
                                                                            <PasswordBox Name="dbPssApp" Margin="0,5,30,0" Height="30" BorderThickness="1" Background="AliceBlue" FontSize="14" Padding="5"/>
                                                                        </DockPanel>
                                                                    </StackPanel>
                                                                </Grid>
                                                            </DockPanel>
                                                            <DockPanel Margin="0 10" HorizontalAlignment="Center">
                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="*"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                    </Grid.ColumnDefinitions>
                                                                    <Button Grid.Column="0" Name="findInstance" BorderBrush="Black" BorderThickness="1.5" Background="Khaki" Height="35" Margin="5">
                                                                        <DockPanel>
                                                                            <materialDesign:PackIcon Kind="Search" Foreground="Black"/>
                                                                            <TextBlock Text="Find Instances" Foreground="Black" Margin="5 0 0 0"/>
                                                                        </DockPanel>
                                                                    </Button>
                                                                        <Button Grid.Column="1"   Name="restoreDef" BorderBrush="Black" BorderThickness="1.5" Background="Khaki" Height="35" Margin="5">
                                                                        <DockPanel>
                                                                            <materialDesign:PackIcon Kind="Restore" Foreground="Black"/>
                                                                            <TextBlock Text="Restore Default" Foreground="Black" Margin="5 0 0 0"/>
                                                                        </DockPanel>
                                                                    </Button>
                                                                        <Button Grid.Column="2" Name="testConn"  BorderBrush="Black" BorderThickness="1.5" Background="Khaki" Height="35" Margin="5">
                                                                        <DockPanel>
                                                                            <materialDesign:PackIcon Kind="LanConnect" Foreground="Black"/>
                                                                            <TextBlock Text="Test Connection" Foreground="Black" Margin="5 0 0 0"/>
                                                                        </DockPanel>
                                                                    </Button>
                                                                        <Button Grid.Column="3"  Name="saveConn"     BorderBrush="Black" BorderThickness="1.5" Background="Khaki" Height="35"  Margin="5">

                                                                        <DockPanel>
                                                                            <materialDesign:PackIcon 
                                                                        Kind="ContentSave" Foreground="Black"/>
                                                                            <TextBlock Text="Save Connection" Foreground="Black" Margin="5 0 0 0"/>
                                                                        </DockPanel>
                                                                    </Button>
                                                                </Grid>
                                                            </DockPanel>
                                                            <StackPanel Margin="20,5,20,0">
                                                                    <Label Content="Database Options" FontSize="18" FontWeight="DemiBold" Foreground="White"/>

                                                                <DockPanel  Margin="0,5,0,0">
                                                                    <Grid>
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="232"/>
                                                                            <ColumnDefinition Width="200"/>
                                                                            <ColumnDefinition Width="270"/>
                                                                            <ColumnDefinition Width="150"/>
                                                                        </Grid.ColumnDefinitions>
                                                                            <RadioButton Grid.Column="0" Name="cleanDbRb" Content="Clean Fusion Database" Foreground="White" FontSize="15" Margin="30 0 0 0" d:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin"/>
                                                                            <RadioButton Grid.Column="1" Name="createDbRb" Content="Create New Database" Foreground="White" FontSize="15" d:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin" />
                                                                            <RadioButton Grid.Column="2" Name="installDbRb" Content="Install Default Fusion Database" Foreground="White" FontSize="15" Margin="15 0 0 0"/>

                                                                        <Button Grid.Column="3" Name="dbOptCont" Height="30" Margin="20,-4,0,0" BorderBrush="Black" BorderThickness="1.5"  d:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin" >

                                                                            <Label Content="Continue" Foreground="White" Margin="0,-5,0,-5" />
                                                                        </Button>
                                                                    </Grid>
                                                                </DockPanel>
                                                            </StackPanel>
                                                            <Separator Margin="5 10 5 5"></Separator>
                                                            <Button Width="155" Margin="0,20,20,10" HorizontalAlignment="Right" BorderBrush="Black" BorderThickness="1.5" Height="40">
                                                                <DockPanel Margin="0,-2,0,0">
                                                                    <materialDesign:PackIcon Kind="ContentSaveAll" Width="20" Height="20" HorizontalAlignment="Center" Margin="-5,0,10,0"  />
                                                                    <TextBlock Text="Save All" FontSize="13" Margin="0,3,0,0" FontFamily="Bold"/>
                                                                </DockPanel>
                                                            </Button>
                                                        </StackPanel>

                                                    </StackPanel>
                                                </ScrollViewer>
                                            </Border>
                                        </StackPanel>
                                    </TabItem>

                                    <TabItem Background="#FFF9D342">
                                        <TabItem.Header>
                                            <StackPanel Orientation="Horizontal">
                                                    <materialDesign:PackIcon Kind="Globe" Width="20" Height="20" Margin="0 0 0 0" Foreground="White"/>
                                                    <Label Content="Global" FontSize="15" FontWeight="Bold" Margin="0 -5 0 0" Foreground="White"/>
                                            </StackPanel>
                                        </TabItem.Header>
                                        <StackPanel>
                                            <Border BorderBrush="Black" Margin="5">
                                                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                                                    <StackPanel>
                                                        <Border >
                                                            <TabControl Style="{DynamicResource MahApps.Styles.TabControl.Animated}" mah:TabControlHelper.Transition="Right" Margin="10"  Background="#FF2B2C28">
                                                                <TabItem Background="#FFF9D342">
                                                                    <TabItem.Header>
                                                                        <StackPanel Orientation="Horizontal">
                                                                            <materialDesign:PackIcon Kind="Folder" Width="15" Height="15" Margin="0 5 0 0" Foreground="White"/>
                                                                                <Label Content="Folder" FontSize="12" FontWeight="Bold" Foreground="White"/>
                                                                        </StackPanel>
                                                                    </TabItem.Header>
                                                                    <StackPanel Margin="10 10">
                                                                        <StackPanel>
                                                                                <Label Content="Folder Settings" FontSize="18" FontWeight="Bold" Foreground="White"/>
                                                                            <StackPanel Margin="20,0,20,0">
                                                                                    <Label Content="Set Default Folders" FontSize="16" FontWeight="DemiBold" Margin="10 5" Foreground="White"/>
                                                                                <DockPanel Margin="20,0,20,0">
                                                                                    <Grid>
                                                                                        <Grid.ColumnDefinitions>
                                                                                            <ColumnDefinition Width="230"/>
                                                                                            <ColumnDefinition Width="*"/>
                                                                                            <ColumnDefinition Width="70"/>
                                                                                        </Grid.ColumnDefinitions>
                                                                                            <Label Grid.Column="0" Content="NC Program Folder " FontSize="15" Foreground="White"/>
                                                                                        <TextBox Grid.Column="1" Name="gbNCProgFolderTb" Background="AliceBlue" BorderThickness="1" FontSize="15" Padding="5 5"/>
                                                                                        <Button Grid.Column="2" Name="gbFolderBtn" BorderThickness="1.5" BorderBrush="Black" Margin="5 0 0 0" >
                                                                                            <materialDesign:PackIcon Kind="Search" Width="20" Height="20" HorizontalAlignment="Center" Margin="-16,-2,-15,0"  />
                                                                                        </Button>
                                                                                    </Grid>
                                                                                </DockPanel>
                                                                                <DockPanel Margin="20,5,20,0">
                                                                                    <Grid>
                                                                                        <Grid.ColumnDefinitions>
                                                                                            <ColumnDefinition Width="230"/>
                                                                                            <ColumnDefinition Width="*"/>
                                                                                            <ColumnDefinition Width="70"/>
                                                                                            
                                                                                        </Grid.ColumnDefinitions>
                                                                                            <Label Grid.Column="0" Content="Incoming File Manager Folder" FontSize="15" Foreground="White"/>
                                                                                        <TextBox Grid.Column="1" Name="gbIFMFolderTb" Background="AliceBlue" BorderThickness="1" FontSize="15" Padding="5 5"/>
                                                                                        <Button Grid.Column="2" Name="gbIFMFolderBtn" BorderThickness="1.5" BorderBrush="Black" Margin="5 0 0 0"  Grid.ColumnSpan="3" >
                                                                                            <materialDesign:PackIcon Kind="Search" Width="20" Height="20" HorizontalAlignment="Center" Margin="-16,-2,-15,0"  />
                                                                                        </Button>
                                                                                    </Grid>
                                                                                </DockPanel>
                                                                                <DockPanel Margin="0,30,20,10" HorizontalAlignment="Right">
                                                                                    <Button Name="gbResDefFolderBtn" Margin="10 0 0 0">
                                                                                        <DockPanel>
                                                                                            <materialDesign:PackIcon Kind="Restore" Width="20" Height="20" Margin="0,0,10,0"/>
                                                                                            <TextBlock Text="Restore Default" VerticalAlignment="Center" />
                                                                                        </DockPanel>
                                                                                    </Button>
                                                                                    <Button Name="gbSaveAllApp" Margin="10 0 0 0">
                                                                                        <DockPanel>
                                                                                            <materialDesign:PackIcon Kind="ContentSaveAll" Width="20" Height="20" Margin="0,0,10,0"/>
                                                                                            <TextBlock Text="Save All" VerticalAlignment="Center" FontWeight="Bold" />
                                                                                        </DockPanel>
                                                                                    </Button>
                                                                                </DockPanel>
                                                                            </StackPanel>
                                                                        </StackPanel>
                                                                    </StackPanel>
                                                                </TabItem>

                                                                <TabItem Background="#FFF9D342">
                                                                    <TabItem.Header>
                                                                        <StackPanel Orientation="Horizontal">
                                                                            <materialDesign:PackIcon Kind="SettingsBox" Width="15" Height="15" Margin="0 5 0 0" Foreground="White"/>
                                                                                <Label Content="Preferences" FontSize="12" FontWeight="Bold" Foreground="White"/>
                                                                        </StackPanel>
                                                                    </TabItem.Header>
                                                                    <StackPanel Margin="10 10">
                                                                        <StackPanel>
                                                                                <Label Content="Preferences Settings" FontSize="18" FontWeight="Bold" Foreground="White" />
