                                                                                                                                        </DataTrigger>
                                                                                                                                    </Style.Triggers>
                                                                                                                                </Style>
                                                                                                                            </TextBlock.Style>
                                                                                                                        </TextBlock>
                                                                                                                    </Grid>
                                                                                                                </DockPanel>
                                                                                                            </StackPanel>
