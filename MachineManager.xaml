                                                                                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                                                                                    <Style.Triggers>
                                                                                                                                        <DataTrigger Binding="{Binding Text, ElementName=TxtBxTransDel}" Value="">
