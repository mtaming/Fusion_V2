                                                                    <materialDesign:PackIcon Kind="ContentSave" Foreground="White" Height="35"  Width="30" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                                                </Button>

                                                                <Button x:Name="btnEdit" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Width="65" Height="50" ToolTip="Edit Selected Machine" Margin="5 0 0 0" Click="btnEdit_Click" >
                                                                    <materialDesign:PackIcon Kind="EditBox" Foreground="White" Height="35"  Width="30" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                                                </Button>

                                                                <Button x:Name="btnSaveEdit" Background="Green" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Width="65" Height="50" ToolTip="Save New Machine" Margin="5 0 0 0" Visibility="Collapsed">
                                                                    <materialDesign:PackIcon Kind="ContentSave" Foreground="White" Height="35"  Width="30" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                                                </Button>

                                                                <Button x:Name="btnDuplicate" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Width="65" Height="50" ToolTip="Duplicate and Rename Machine" Margin="5 0 0 0">
                                                                    <materialDesign:PackIcon Kind="ContentCopy" Foreground="White" Height="35"  Width="30" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                                                </Button>

                                                                <Button x:Name="btnDelete" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Width="65" Height="50" ToolTip="Delete Selected Machine" Margin="5 0 0 0">
                                                                    <materialDesign:PackIcon Kind="Delete" Foreground="White" Height="35"  Width="30" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                                                </Button>

                                                                <Button x:Name="btnCancel" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Width="65" Height="50" ToolTip="Cancel" Margin="5 0 0 0" IsEnabled="False" Click="btnCancel_Click">
                                                                    <materialDesign:PackIcon Kind="Cancel" Foreground="White" Height="35"  Width="30" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                                                </Button>
                                                            </DockPanel>
                                                        </Grid>
                                                    </Border>
                                                </ScrollViewer>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>
            </ScrollViewer>

            <Grid Name="MachLicenseManagerGrid" Visibility="Collapsed">
                <Grid.Background>
                    <SolidColorBrush Color="Black" Opacity="0.2" />
                </Grid.Background>

                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <Grid HorizontalAlignment="Center" Width="1100">
                        <StackPanel VerticalAlignment="Center" Margin="150 20">
                            <Border Name="machLicenseBorder" CornerRadius="20" BorderBrush="#FFFFF0B7" BorderThickness="3"  Background="#FF2D4E8C" Visibility="Visible">
                                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                                    <StackPanel>
                                        <Label Content="Machine License Manager" FontSize="17" FontWeight="Bold" Margin="25,10,0,0" Foreground="White"/>
                                        <Separator></Separator>
                                        <DockPanel Margin="10 5 10 5">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0">
                                                    <Label Content="Level 1 Machines" FontSize="15" FontWeight="Bold" Foreground="Gold" HorizontalAlignment="Center" />
                                                    <DockPanel HorizontalAlignment="Center">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="*"/>
                                                            </Grid.ColumnDefinitions>
                                                            <DockPanel Grid.Column="0">
                                                                <TextBlock Text="Available:" FontSize="12" Foreground="White"/>
                                                                <TextBlock Text="Unlimited" FontSize="12" Foreground="White" Margin="5 0 0 0"/>
                                                            </DockPanel>
                                                            <DockPanel Grid.Column="1" Margin="20 0 0 0">
                                                                <TextBlock Text="Used:" FontSize="12" Foreground="White"/>
                                                                <TextBlock Text="1000" FontSize="12" Foreground="White" Margin="5 0 0 0"/>
                                                            </DockPanel>
                                                        </Grid>

                                                    </DockPanel>
                                                    <ListBox Name="LstBoxMachLvl1" ItemContainerStyle="{StaticResource _ListBoxItemStyle}" Background="White" Height="300" Margin="5" BorderBrush="Black" BorderThickness="1">
                                                        <ListBox.ItemTemplate>
                                                            <DataTemplate>
                                                                <Grid>
                                                                    <TextBlock Text="{Binding MachLvl1_ID}"  Visibility="Hidden"/>
                                                                    <TextBlock Text="{Binding MachLvl1_Name}" />
                                                                    <TextBlock Text="{Binding MachLvl1_Level}" Visibility="Hidden"/>
                                                                </Grid>
                                                            </DataTemplate>
                                                        </ListBox.ItemTemplate>
                                                    </ListBox>
                                                </StackPanel>
                                                <StackPanel Grid.Column="1">
                                                    <Label Content="Level 2 Machines" FontSize="15" FontWeight="Bold" Foreground="Gold" HorizontalAlignment="Center"/>
                                                    <DockPanel HorizontalAlignment="Center">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="*"/>
                                                            </Grid.ColumnDefinitions>
                                                            <DockPanel Grid.Column="0">
                                                                <TextBlock Text="Available:" FontSize="12" Foreground="White"/>
                                                                <TextBlock Text="1000" FontSize="12" Foreground="White" Margin="5 0 0 0"/>
                                                            </DockPanel>
                                                            <DockPanel Grid.Column="1" Margin="20 0 0 0">
                                                                <TextBlock Text="Used:" FontSize="12" Foreground="White"/>
                                                                <TextBlock Text="1000" FontSize="12" Foreground="White" Margin="5 0 0 0"/>
                                                            </DockPanel>
                                                        </Grid>

                                                    </DockPanel>
                                                    <ListBox Name="LstBoxMachLvl2" ItemContainerStyle="{StaticResource _ListBoxItemStyle}" Background="White" Height="300" Margin="5" BorderBrush="Black" BorderThickness="1">
                                                        <ListBox.ItemTemplate>
                                                            <DataTemplate>
                                                                <Grid>
                                                                    <TextBlock Text="{Binding MachLvl2_ID}"  Visibility="Hidden"/>
                                                                    <TextBlock Text="{Binding MachLvl2_Name}" />
                                                                    <TextBlock Text="{Binding MachLvl2_Level}" Visibility="Hidden"/>
                                                                </Grid>
                                                            </DataTemplate>
                                                        </ListBox.ItemTemplate>
                                                    </ListBox>
                                                </StackPanel>
                                                <StackPanel Grid.Column="2">
                                                    <Label Content="Level 3 Machines" FontSize="15" FontWeight="Bold" Foreground="Gold" HorizontalAlignment="Center"/>
                                                    <DockPanel HorizontalAlignment="Center">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="*"/>
                                                            </Grid.ColumnDefinitions>
                                                            <DockPanel Grid.Column="0">
                                                                <TextBlock Text="Available:" FontSize="12" Foreground="White"/>
                                                                <TextBlock Text="1000" FontSize="12" Foreground="White" Margin="5 0 0 0"/>
                                                            </DockPanel>
                                                            <DockPanel Grid.Column="1" Margin="20 0 0 0">
                                                                <TextBlock Text="Used:" FontSize="12" Foreground="White"/>
                                                                <TextBlock Text="1000" FontSize="12" Foreground="White" Margin="5 0 0 0"/>
                                                            </DockPanel>
                                                        </Grid>

                                                    </DockPanel>
                                                    <ListBox Name="LstBoxMachLvl3" ItemContainerStyle="{StaticResource _ListBoxItemStyle}" Background="White" Height="300" Margin="5" BorderBrush="Black" BorderThickness="1" SelectionMode="Extended">
                                                        <ListBox.ItemTemplate>
                                                            <DataTemplate>
                                                                <Grid>
                                                                    <TextBlock Text="{Binding MachLvl3_ID}"  Visibility="Hidden"/>
                                                                    <TextBlock Text="{Binding MachLvl3_Name}" />
                                                                    <TextBlock Text="{Binding MachLvl3_Level}" Visibility="Hidden"/>
                                                                </Grid>
                                                            </DataTemplate>
                                                        </ListBox.ItemTemplate>
                                                    </ListBox>
                                                </StackPanel>
                                            </Grid>
                                        </DockPanel>

                                        <Border Background="#FFAFDDEC" Margin="10 0 10 10" CornerRadius="15" BorderBrush="Khaki" BorderThickness="2">
                                            <StackPanel>
                                                <DockPanel>
                                                    <materialDesign:PackIcon Kind="InformationCircle" Foreground="#FF002EFF" Width="30" Height="30" Margin="10 5 5 5"/>
                                                    <Label Content="To assign machines to other levels:" VerticalAlignment="Center" FontWeight="Bold" FontSize="14"/>
                                                </DockPanel>
                                                <Label Content="(1) Drag and Drop item(s) from one list to another OR" VerticalAlignment="Center"  FontSize="13" Margin="50 -10 0 0"/>
                                                <Label Content="(2) Right Click then Select where to assign your machine(s)." VerticalAlignment="Center"  FontSize="13" Margin="50 -5 0 0"/>

                                                <Separator Margin="5" FontWeight="Black"/>

                                                <DockPanel>
                                                    <materialDesign:PackIcon Kind="Note" Foreground="#FF002EFF" Width="30" Height="30" Margin="10 5 5 5"/>
                                                    <Label Content="Note:" VerticalAlignment="Center" FontWeight="Bold" FontSize="14"/>
                                                </DockPanel>
                                                <Label Content="- Level 2 Machines assigned to other levels will not allow the use of Virtual Commands in File Transport." VerticalAlignment="Center"  FontSize="13" Margin="50 -10 0 0" />
                                                <Label Content="- Level 3  Machines assigned to other levels will not allow the use of TCP/IP Sockets and DNC Link in File Transport." VerticalAlignment="Center"  FontSize="13" Margin="50 -5 0 5"/>
                                            </StackPanel>
                                        </Border>

                                        <DockPanel HorizontalAlignment="Right" Margin="0 0 10 10">
                                            <Button Name="BtnSaveMachLicenceMngr" Height="30" Width="100" ToolTip="Save Changes" Margin="0,10,0,0" BorderThickness="0" >
                                                <Grid Margin="-10,-5">
                                                    <materialDesign:PackIcon Kind="ContentSave" Width="17" Height="17" />
                                                    <TextBlock Text="Save" Margin="25 0 0 0"/>
                                                </Grid>
                                            </Button>
                                            <Button Name="BtnCloseMachLicenseMngr" Height="30" Width="100" ToolTip="Close Machine License Manager" Background="Red" Margin="10,10,0,0" BorderThickness="0"  HorizontalAlignment="Left" Click="BtnCloseMachLicenseMngr_Click" >
                                                <Grid Margin="-10,-5">
                                                    <materialDesign:PackIcon Kind="CloseBold" Width="17" Height="17" />
                                                    <TextBlock Text="Close" Margin="25 0 0 0"/>
                                                </Grid>
                                            </Button>
                                        </DockPanel>
                                    </StackPanel>
                                </ScrollViewer>
                            </Border>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>

            </Grid>

            <Grid Name="modifyFnameExtGrid" Visibility="Collapsed">
                <Grid.Background>
                    <SolidColorBrush Color="Black" Opacity="0.2" />
                </Grid.Background>

                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <Grid HorizontalAlignment="Center" Width="1100">
                        <StackPanel VerticalAlignment="Center" Margin="250 20">
                            <Border Name="modFnameExtBorder" CornerRadius="20" BorderBrush="#FFFFF0B7" BorderThickness="3"  Background="#FF2D4E8C" Visibility="Visible">
                                <StackPanel>
                                    <Label Content="Change Filename and Extension of Operator Messages" FontSize="17" FontWeight="Bold" Margin="25,10,0,0" Foreground="White"/>
                                    <Separator/>

                                    <DockPanel Margin="25 5 10 5">
                                        <Label Content="Default Messaging Extension" FontSize="15" Foreground="White" VerticalAlignment="Center"/>
                                        <Label Content="." FontSize="15" Foreground="Yellow" FontWeight="Bold" Margin="10 5 0 0"/>
                                        <TextBox Name="TxtBxDefMesExt" Background="White" BorderBrush="Black" BorderThickness="1" Text="txt" FontSize="15" Padding="5" Height="30" Width="150" HorizontalAlignment="Left"/>
                                    </DockPanel>

                                    <StackPanel Margin="25 5 25 5">
                                        <Border BorderBrush="Black" BorderThickness="1" >
                                            <StackPanel>
                                                <Label Content="Remote Request Lookup Not Found" FontSize="14" FontStyle="Italic" Background="Khaki" BorderThickness="0 0 0 2"/>
                                                <TextBox Name="TxtBoxRemReqLkUpNtFnd" Background="White" FontSize="15" FontWeight="Bold" Padding="5" Height="30" TextWrapping="Wrap" TextAlignment="Center" Text="LookUpFailed"/>
                                            </StackPanel>
                                        </Border>

                                        <Border BorderBrush="Black" BorderThickness="1" Margin="0 5 0 0">
                                            <StackPanel>
                                                <Label Content="Remote Request Failed" FontSize="14" FontStyle="Italic" Background="Khaki" BorderThickness="0 0 0 2"/>
                                                <TextBox Name="TxtBoxRemReqFailed" Background="White" FontSize="15" FontWeight="Bold" Padding="5" Height="30" TextWrapping="Wrap" TextAlignment="Center" Text="InvalidRemoteRequest"/>
                                            </StackPanel>
                                        </Border>

                                        <Border BorderBrush="Black" BorderThickness="1" Margin="0 5 0 0">
                                            <StackPanel>
                                                <Label Content="Remote Request File Lock" FontSize="14" FontStyle="Italic" Background="Khaki" BorderThickness="0 0 0 2"/>
                                                <TextBox Name="TxtBoxRemReqFileLock" Background="White" FontSize="15" FontWeight="Bold" Padding="5" Height="30" TextWrapping="Wrap" TextAlignment="Center" Text="RequestFileLocked"/>
                                            </StackPanel>
                                        </Border>

                                        <Border BorderBrush="Black" BorderThickness="1" Margin="0 5 0 0">
                                            <StackPanel>
                                                <Label Content="Remote Request File Not Found" FontSize="14" FontStyle="Italic" Background="Khaki" BorderThickness="0 0 0 2"/>
                                                <TextBox Name="TxtBoxRemReqFileNtFnd" Background="White" FontSize="15" FontWeight="Bold" Padding="5" Height="30" TextWrapping="Wrap" TextAlignment="Center" Text="RequestFileNotFound"/>
                                            </StackPanel>
                                        </Border>

                                        <Border BorderBrush="Black" BorderThickness="1" Margin="0 5 0 0">
                                            <StackPanel>
                                                <Label Content="Remote Request On Hold" FontSize="14" FontStyle="Italic" Background="Khaki" BorderThickness="0 0 0 2"/>
                                                <TextBox Name="TxtBoxRemReqOnHld" Background="White" FontSize="15" FontWeight="Bold" Padding="5" Height="30" TextWrapping="Wrap" TextAlignment="Center" Text="RequestFileOnHold"/>
                                            </StackPanel>
                                        </Border>

                                        <Border BorderBrush="Black" BorderThickness="1" Margin="0 5 0 0">
                                            <StackPanel>
                                                <Label Content="Remote Request Folder Not Found" FontSize="14" FontStyle="Italic" Background="Khaki" BorderThickness="0 0 0 2"/>
                                                <TextBox Name="TxtBoxRemReqFldrNtFnd" Background="White" FontSize="15" FontWeight="Bold" Padding="5" Height="30" TextWrapping="Wrap" TextAlignment="Center" Text="RequestFolderNotFound"/>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>
                                    <Separator/>

                                    <DockPanel HorizontalAlignment="Right" Margin="0 0 25 10">
                                        <Button Name="BtnOkChangeFnameExt" Height="30" Width="100" ToolTip="Save Changes" Margin="0,10,0,0" BorderThickness="1" BorderBrush="Black" Click="BtnOkChangeFnameExt_Click" >
                                            <Grid Margin="-10,-5">
                                                <materialDesign:PackIcon Kind="CheckBold" Width="17" Height="17" />
                                                <TextBlock Text="OK" Margin="25 0 0 0"/>
                                            </Grid>
                                        </Button>
                                        <Button Name="BtnUndoChangeFnameExt" Height="30" Width="100" ToolTip="Cancel"  Margin="10,10,0,0" BorderThickness="1" BorderBrush="Black" HorizontalAlignment="Left" Click="BtnUndoChangeFnameExt_Click" >
                                            <Grid Margin="-10,-5">
                                                <materialDesign:PackIcon Kind="Undo" Width="17" Height="17" />
                                                <TextBlock Text="Undo" Margin="25 0 0 0"/>
                                            </Grid>
                                        </Button>
                                    </DockPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </Grid>

            <Grid Name="ApplyToMachGrid" Visibility="Collapsed">
                <Grid.Background>
                    <SolidColorBrush Color="Black" Opacity="0.2" />
                </Grid.Background>
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <Grid HorizontalAlignment="Center" Width="1100">
                        <StackPanel VerticalAlignment="Center" Margin="150 20">
                            <Border Name="applytomachborder" CornerRadius="20" BorderBrush="#FFFFF0B7" BorderThickness="3"  Background="#FF2D4E8C" Visibility="Visible">
                                <StackPanel>
                                    <ListBox Name="ApplyToMachListBox" Background="White" BorderThickness="3" BorderBrush="Black" Margin="15 15 15 0"  FontSize="13" Padding="5" Height="300" SelectionMode="Multiple">

                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel>
                                                    <CheckBox IsChecked="{Binding isChecked}">
                                                        <Label Content="{Binding machName}" Visibility="Visible"/>
                                                    </CheckBox>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>

                                    </ListBox>

                                    <Label Content="Apply the operator messages changes on the selected Machine(s)." FontSize="15" FontWeight="Bold" Foreground="White" Margin="15 0 0 0"/>

                                    <DockPanel>
                                        <CheckBox Name="cbxSelAll" Content="Select All" Background="#FFF9F6F6" Foreground="BlanchedAlmond" FontSize="15" FontWeight="Bold" Margin="20 0 0 0" Checked="cbxSelAll_Checked" />
                                        <CheckBox Name="cbxDeselAll" Content="Deselect All" Background="#FFF9F6F6" Foreground="BlanchedAlmond" FontSize="15" FontWeight="Bold" Margin="20 0 0 0" Checked="cbxDeselAll_Checked" />
                                    </DockPanel>

                                    <DockPanel HorizontalAlignment="Right" Margin="0 0 25 10">
                                        <Button Name="BtnOpMessApplyToMach" Height="30" Width="100" ToolTip="Save Changes" Margin="0,10,0,0" BorderThickness="1" BorderBrush="Black" >
                                            <Grid Margin="-10,-5">
                                                <materialDesign:PackIcon Kind="CheckBold" Width="17" Height="17" />
                                                <TextBlock Text="Apply" Margin="25 0 0 0"/>
                                            </Grid>
                                        </Button>
                                        <Button Name="BtnOpMessCancelApplyToMach" Height="30" Width="100" ToolTip="Cancel"  Margin="10,10,0,0" BorderThickness="1" BorderBrush="Black" HorizontalAlignment="Left" Click="BtnOpMessCancelApplyToMach_Click"  >
                                            <Grid Margin="-10,-5">
                                                <materialDesign:PackIcon Kind="Cancel" Width="17" Height="17" />
                                                <TextBlock Text="Cancel" Margin="25 0 0 0"/>
                                            </Grid>
                                        </Button>
                                    </DockPanel>

                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</Page>
