                                                                                                                    </Grid>
                                                                                                                </DockPanel>
                                                                                                            </StackPanel>
                                                                                                        </Grid>
                                                                                                    </Grid>
                                                                                                </DockPanel>
                                                                                            </Grid>

                                                                                        </StackPanel>
                                                                                    </Border>
